<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@color/backInput"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backInput"
        android:gravity="right"
        android:paddingBottom="6pt"
        android:paddingRight="4pt"
        android:paddingTop="10pt"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="44sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buFunct"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buPorcent"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buDiv"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="/"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu8"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu9"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butMult"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="*"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu5"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu6"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buMoins"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="-"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu2"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu3"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buPlus"

                android:layout_width="30pt"

                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="+"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"

            android:layout_width="60pt"

            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buPoint"

            android:layout_width="100dp"

            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:text="."
            android:textSize="25sp" />

        <Button
            android:id="@+id/buEgal"

            android:layout_width="30pt"

            android:layout_height="30pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/orange"
            android:text="="
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>